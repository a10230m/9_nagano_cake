<div class="container">
  <h4>注文履歴一覧</h4>
</div>

<div class="container">
  <div class="row row no-gutters">
    <div class="col-12">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="col-1">注文日</th>
            <td class="col-4">配送先</th>
            <td class="col-2">注文商品</th>
            <td class="col-1">支払金額</th>
            <td class="col-2">ステータス</th>
            <td class="col-2">注文詳細</th>
          </tr>
          <% @orders.each do |order| %>
          <tr>
            <td scope="row"><%= order.created_at.strftime('%Y/%m/%d') %></th>
            <td>
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
			  	  </td>
            <td>
              <% order.items.each do |item| %>
                <%= item.name %><br>
              <% end %>
            </td>
            <td><%= (order.amount_billed).to_s(:delimited) %>円</td>

            <td><%= order.order_status_i18n %></td>
            <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>