<%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
 <h5><%= f.label :payment_method, "支払い方法" %></h5>
 <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
 <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>

 <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
 <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%><br>


<h5>お届け先</h5>
<%= f.radio_button :address_option, 0, checked: "checked" %>
<!--↑checked:予めbuttn選択される　-->
    <%= f.label :address, "ご自身の住所" %>
    <br>
      〒<%= current_customer.postal_code %>
      　<%= current_customer.address %><br>
      　<%= current_customer.last_name %><%= current_customer.first_name %><br><br>

 <!--< %= f.radio_button :address, 1 %>-->
 <!--< %= f.label :address, "登録済みの住所から" %>-->

  <%= f.radio_button :address_option, 2 %>
    <%= f.label :order_address, "新しいお届け先" %>
     　<table>
         <tr>
           <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
           <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
           <td><%= f.label :address, "住所" %></td>
           <td><%= f.text_field :address %></td>
        </tr>
         <tr>
           <td><%= f.label :name, "宛名" %></td>
           <td><%= f.text_field :name %></td>
         </tr>
     </table>

  <%= f.submit "確認画面へ進む", class: "btn btn-sm btn-success" %>
<% end %>