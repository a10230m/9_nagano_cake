

<div class="container">
  <h3>ログイン</h3>
</div>


<div class="container">
  <p class="em1down">会員の方はこちらからログイン</p>
</div>


<%= form_with model: @customer, url: new_customer_session_path, local: true do |f| %>
<div class="container">
  <div class="row row no-gutters">
    <div class="col-2"></div>
    <div class="col-2"><%= f.label :メールアドレス %></div>
    <div class="col-lg-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    <div class="col-2"></div>
  </div>
</div>
<div class="container">
  <div class="row row no-gutters">
    <div class="col-2"></div>
    <div class="col-lg-2"><%= f.label :パスワード %></div>
    <div class="col-lg-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    <div class="col-2"></div>
  </div>
</div>
<div class="container">
  <div class="row row no-gutters">
    <div class="col-2"></div>
    <div class="col-lg-2"></div>
    <div class="col-lg-6"><%= f.submit "ログイン", class: "btn btn-primary" %></div>
    <div class="col-2"></div>
  </div>
</div>

<% end %>

<div class="container">
  <p class="em1down">会員登録がお済みでない方</p>
  <p class="em7down"><%= render "public/shared/links" %>から新規登録を行ってください。</p>
</div>
