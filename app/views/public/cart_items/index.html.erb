
<div class="container">
  <h2>ショッピングカート</h2>
</div>

<!--< %= link_to "削除する", public_cart_item_path(cart_item.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>-->
<!--ここのパス直す-->
<%= link_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete, class: "btn btn-danger" %>

<div class="container">
  <table class="table table-bordered">

    <thead>
      <tr>
        <th scope="col-1">商品名</th>
        <th scope="col-2">単価（税込）</th>
        <th scope="col-3">数量</th>
        <th scope="col-4">小計</th>
        <th scope="col-5"></th>
      </tr>
    </thead>
    <tbody>
      <% sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>

          <% if cart_item.item.image.attached? %>
            <%= image_tag cart_item.item.image, size: "100x50", class: "item-image2" %>
          <% else %>
            <%= image_tag 'noimage', size: "100x50", class: "item-image2" %>
          <% end %>
　　      <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
          <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to "削除する", public_cart_item_path(cart_item.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      <% sum += cart_item.subtotal %>
    <% end %>
    </tbody>
  </table>
  合計金額<%= sum %>
</div>