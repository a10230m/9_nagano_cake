<%= flash[:notice_destroy] %>


<div class="container">
  <div class="row">
    <div class="col-auto mr-auto">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col-auto">
      <%= link_to "カートを空にする", destroy_all_public_cart_items_path, class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>
  </div>
</div>


<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">単価（税込）</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <% if cart_item.item.image.attached? %>
            <%= image_tag cart_item.item.image, size: "100x50", class: "item-image2" %>
          <% else %>
            <%= image_tag 'noimage', size: "100x50", class: "item-image2" %>
          <% end %>
　　      <%= cart_item.item.name %>
        </td>
        <td><%= (cart_item.item.with_tax_price).to_s(:delimited) %></td>
        <td>
          <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= (cart_item.subtotal).to_s(:delimited) %></td>
        <td><%= link_to "削除する", public_cart_item_path(cart_item.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      <% sum += cart_item.subtotal %>
    <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <div class="row">
    <div class="col-auto mr-auto">
      <%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <table class="table-bordered">
      　<tbody>
      　   <td colspan="2">合計金額</td>
      　　  <td colspan="2"><%= sum.to_s(:delimited) %></td>
        </tbody>
      </table>
      <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>

