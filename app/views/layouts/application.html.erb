<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>






  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <span><a class="navbar-brand" href="/"><%= image_tag 'logo_n04.png',size: "200x100" %></a></span>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <li class="nav-item">

              <% if current_customer %>
                <%= link_to "マイページ", customers_mypage_path, class: "btn btn-outline-secondary" %>
                <%= link_to "商品一覧", public_items_path, class: "btn btn-outline-secondary" %>
                <!--<　%= link_to "カート",  %>--><button type="button" class="btn btn-outline-secondary">カート</button>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary" %>
              <% elsif current_admin %>
                <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary" %>
                <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary" %>
                <!--<　%= link_to "注文履歴一覧",  %>--><button type="button" class="btn btn-outline-secondary">注文履歴一覧</button>
                <!--<　%= link_to "ジャンル一覧",  %>--><button type="button" class="btn btn-outline-secondary">ジャンル一覧</button>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary" %>
              <% else %>
                <%= link_to "About", about_path, class: "btn btn-outline-secondary" %>
                <%= link_to "商品一覧", public_items_path, class: "btn btn-outline-secondary" %>
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary" %>
                <!--if admin・カスタマーわける-->
                <%= link_to "ログイン", customer_session_path, class: "btn btn-outline-secondary" %>
              <% end %>
            </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>


