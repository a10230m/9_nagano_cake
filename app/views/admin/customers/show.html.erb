
<div class="container">
  <h4>
    <strong><%= @customer.last_name %><%= @customer.first_name %></strong>さんの会員詳細
  </h4>
</div>
<br>

<div class="container">
  <div class="row">
    <div class="col-3">会員ID</div>
    <div class="col-3"><%= @customer.id %></div>
  </div>
  <br>
  <div class="row">
    <div class="col-3">氏名</div>
    <div class="col-3"><%= @customer.last_name %>　<%= @customer.first_name %></div>
  </div>
  <br>
  <div class="row">
    <div class="col-3">フリガナ</div>
    <div class="col-3"><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></div>
  </div>
  <br>
  <div class="row">
    <div class="col-3">郵便番号</div>
    <div class="col-3"><%= @customer.postal_code %></div>
  </div>
  <br>
  <div class="row">
    <div class="col-3">住所</div>
    <div class="col-3"><%= @customer.address %></div>
  </div>
  <br>
  <div class="row">
    <div class="col-3">電話番号</div>
    <div class="col-3"><%= @customer.telephone_number %></div>
  </div>
  <br>
  <div class="row">
    <div class="col-3">メールアドレス</div>
    <div class="col-3"><%= @customer.email %></div>
  </div>
  <br>
  <div class="row">
    <div class="col-3">会員ステータス</div>
    <div class="col-3">
      <% if @customer.is_active %>
        <p class="font-weight-bold text-success">有効</p>
      <% else %>
        <p>退会</p>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-3"><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></div>
  </div>
</div>
<br>
<br>
