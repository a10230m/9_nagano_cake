<div class="container">
  <h4><strong><%= @customer.last_name %><%= @customer.first_name %></strong>さんの会員情報編集</h4>
</div>
<br>
<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-3">会員ID</div>
    <div class="col-3"><%= @customer.id %></div>
  </div>
  <br>
  <div class="row row no-gutters form-group">
    <%= f.label :名前, class: "col-3" %>
    <%= f.text_field :last_name, class: "col-2" %>　<%= f.text_field :first_name, class: "col-2" %>
  </div>

  <div class="row row no-gutters form-group">
    <%= f.label :フリガナ, class: "col-3" %>
    <%= f.text_field :last_name_kana, class: "col-2" %>　<%= f.text_field :first_name_kana, class: "col-2" %>
  </div>

  <div class="row row no-gutters form-group">
    <%= f.label :郵便番号（ハイフンなし）, class: "col-3" %>
    <%= f.text_field :postal_code, class: "col-2" %>
  </div>

  <div class="row row no-gutters form-group">
    <%= f.label :住所, class: "col-lg-3" %>
    <%= f.text_field :address, class: "col-2" %>
  </div>

  <div class="row row no-gutters form-group">
    <%= f.label :電話番号, class: "col-3" %>
    <%= f.text_field :telephone_number, class: "col-2" %>
  </div>

  <div class="row row no-gutters form-group">
    <%= f.label :メールアドレス, class: "col-3" %>
    <%= f.text_field :email, class: "col-2" %>
  </div>

  <div class="row row no-gutters form-group">
    <%= f.label :会員ステータス, class: "col-3" %>
    <div class="col-3">
      <%= f.radio_button "is_active", "true", id: "radio1" %>
      　<label for="radio1">有効</label>
      <%= f.radio_button "is_active", "false", id: "radio2" %>
        <label for="radio2">退会</label>
    </div>
  </div>

  <div class="row row no-gutters form-group">
    <div class="col-3"></div>
    <div class="col-2">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  </div>
</div>


<% end %>
<br>
<br>