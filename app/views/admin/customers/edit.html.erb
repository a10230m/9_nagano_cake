<h2>さんの会員情報編集</h2>


<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

<div class="form-group">
  <label for="customer_id">会員ID</label>
  <%= @customer.id %>
</div>

<div class="form-group">
  <label for="customer_name">氏名</label>
  <%= f.text_field :last_name %><%= f.text_field :first_name %>
</div>

<div class="form-group">
  <label for="customer_name_kana">フリガナ</label>
  <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
</div>

<div class="form-group">
  <label for="customer_postal_code">郵便番号</label>
  <%= f.text_field :postal_code %>
</div>

<div class="form-group">
  <label for="customer_address">住所</label>
  <%= f.text_field :address %>
</div>

<div class="form-group">
  <label for="customer_telephone_number">電話番号</label>
  <%= f.text_field :telephone_number %>
</div>

<div class="form-group">
  <label for="customer_email">メールアドレス</label>
  <%= f.text_field :email %>
</div>

<div class="form-group">
  <label for="customer_is_active">会員ステータス</label>
  <%= f.text_field :is_active %>
</div>


<div class="form-group">
  <%= f.submit "変更を保存" %>
  <!--bootstrap導入後 < %= f.submit "新規登録", class: "btn btn-success" %>-->
</div>
<% end %>