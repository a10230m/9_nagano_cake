<div class="container">
  <h2>商品詳細</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">
      <!--each分は単数形のみには使用しない-->
      <div class="image">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, width: '50%', height: '50%' %>
        <% else %>
          <%= image_tag 'noimage', size: "400x300" %>
        <% end %>
      </div>
    </div>
    <div class="col-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>税込価格（税抜価格）</td>
           <td><%= @item.price %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br />
<br />

<div class="d-flex justify-content-center">
  <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
</div>

</div>