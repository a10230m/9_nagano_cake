<h2>商品詳細</h2>


<div class="form-group">
  <% @item.each do |item| %>
    <% if @item.image.attached? %>
      <%= image_tag @item.image(100,100) %>
    <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
    <% end %>
  <% end %>
</div>

<table class="table">
  <tbody>
    <% @item.each do |item| %>
    <tr>
      <td>商品名</td>
      <td><%= link_to @item.name, admin_item_path(item.id) %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>税込価格<br />（税抜価格）</td>
      <td><%= @item.price %>円</td>
    </tr>
    <tr>
      <td><%= @item.id %></td>
      <td><%= @item.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>