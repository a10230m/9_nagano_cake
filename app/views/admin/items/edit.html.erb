<h2>商品編集</h2>


<!--< %= form_with model:@item, url:admin_items_path, local:true do |f| %>-->
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

<div class="form-group">
  <label for="item_image">商品画像</label>
  <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group">
  <label for="item_name">商品名</label>
  <%= f.text_field :name %>
</div>

<div class="form-group">
  <label for="item_introduction">商品説明</label>
  <%= f.text_area :introduction %>
</div>

<div class="form-group">
  <label for="item_price">税抜価格</label>
  <%= f.text_field :price %>円
</div>

<div class="form-group">
<%= f.submit "新規登録", class: "btn btn-success" %>
</div>
<% end %>