<h2>商品一覧</h2>


<!--↓右に配置・リンクライン消す-->
<%= link_to "➕" , new_admin_item_path(@new) %>

<% @items.each do |item| %>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th colspan="5">商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
    </tr>
  </tbody>
</table>
<% end %>
