
<div class="container">
  <div class="row row no-gutters justify-content-between align-items-center">
    <div class="col-auto mr-auto">
      <h4>商品一覧</h4>
    </div>
    <div class="col-auto">
      <h1><%= link_to "➕" , new_admin_item_path(@new) %></h1>
    </div>
  </div>
</div>


  <div class="container">
    <div class="row row no-gutters justify-content-center">
      <div class="col-8">
      <table class="table">
        <thead>
          <tr>
      　     <th class="col-1">商品ID</th>
          　<th class="col-3">商品名</th>
          　<th class="col-2">税抜価格</th>
          　<th class="col-2">ステータス</th>
        　</tr>
      　</thead>

      　<tbody>
        　<% @items.each do |item| %>
        　<tr>
          　<td>
          　   <div class="item_id"> <%= item.id %> </div>
            </td>
          　<td>
          　   <div class="item_name">
        　       <%= link_to item.name, admin_item_path(item.id) %>
          　   </div>
  　         </td>
  　         <td>
  　           <div class="item_price">
  　             <%= (item.price).to_s(:delimited) %>
  　           </div>
  　         </td>
  　         <td>
  　           <% if item.is_active %>
    　           <p class="font-weight-bold text-success">販売中</p>
    　         <% else %>
    　          <p>販売停止中</p>
    　        <% end %>
  　         </td>
  　       <% end %>
  　     </tbody>
  　   </table>
  　   <div class="d-flex justify-content-center">
  　     <%= paginate @items %>
  　   </div>
    </div>
  </div>
  </div>
